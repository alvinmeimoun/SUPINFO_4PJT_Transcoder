@using Vereyon.Web;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-2.2.0.min.js")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Transcoder", "Index", "Home", null, new { @class = "navbar-brand" })

            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="font-weight:bold;">
                @if (Request.Cookies["User"] != null)
                {

                    <ul class="nav navbar-nav navbar-right">

                        <li style="border-left: 1px solid #4e4e4e;">
                            <a href="/Conversion/AddConversion"><span class='glyphicon glyphicon-plus' style="color:green;"></span> Conversion</a>
                        </li>
                        <li style="border-left: 1px solid #4e4e4e;">
                            <a href="/Conversion/MesConversions">Mes Conversions</a>
                        </li>

                        <li style="border-left: 1px solid #4e4e4e;;">
                            <a href="/Conversion/Index"><span class='glyphicon glyphicon-shopping-cart' style="color:blue;"></span> Panier</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> @Html.Raw("Bonjour " + Request.Cookies["User"].Value + " !") <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Modifier mon profil", "Edit", "User")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Se déconnecter", "LogOff", "Account")</li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li style="border-left: 1px solid #4e4e4e;">@Html.ActionLink("S’inscrire", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li style="border-left: 1px solid #4e4e4e;">@Html.ActionLink("Se connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    </ul>
                }
              
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content" style="padding-right: 0; padding-left: 0;">
        @Html.RenderFlashMessages()
        @RenderBody()
    
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
