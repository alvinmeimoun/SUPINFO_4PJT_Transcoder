@Scripts.Render("~/Scripts/jquery.AshAlom.gaugeMeter-2.0.0.min.js")
@model Core.Transcoder.DataAccess.ViewModels.HomeViewModel

<style type="text/css">
    #content_banner {
        background: url(@Url.Content("~/Content/Images/home_main_bg.jpg"));
        background-position: bottom;
    }

    #transcoder_title {
        text-align: center;
        margin-top: 75px;
        font-size: 40px;
        font-weight: bold;
        color: white;
    }

    #transcoder_summary {
        text-align: center;
        horiz-align: center;
        margin-top: 50px;
        font-size: 25px;
        font-weight: normal;
        color: white;
        margin-left: 5px;
        margin-right: 5px;
        margin-bottom: 35px;
    }

    #bt_get_started {
        padding: 10px;
        border: white solid 1px;
        border-radius: 20px;
        background-color: transparent;
        margin-bottom: 30px;
        color: white;
    }

    .gauge-meter-home-1 {
      position: Relative;
      text-align: Center;
      overflow: Hidden;
      cursor: Default;
      display: inline-block;
    }

    .gauge-meter-home-1 SPAN, .gauge-meter-home-1 B {
      width: 54%;
      position: Absolute;
      text-align: Center;
      display: Inline-Block;
      color: RGBa(255,255,255,.8);
      font-weight: 100;
      font-family: "Open Sans", Arial;
      overflow: Hidden;
      white-space: NoWrap;
      text-overflow: Ellipsis;
      margin: 0 23%;
    }

    .gauge-meter-home-1[data-style="Semi"] B {
      width: 80%;
      margin: 0 10%;
    }

    .gauge-meter-home-1 S, .gauge-meter-home-1 U {
      text-decoration: None;
      font-size: .60em;
      font-weight: 200;
      opacity: .6;
    }

    .gauge-meter-home-1 B {
      color: #FFF;
      font-weight: 200;
      opacity: .8;
    }

</style>

<div id="content_banner" role="main" tabindex="-1">
    <div class="container">
        <div class="row">
            <p id="transcoder_title">Transcoder</p>
        </div>
        <div class="row">
            <p id="transcoder_summary">Converting your media has never been so easy</p>
        </div>
        <div class="row" style="margin-top: 35px;">
            <form action="/Account/Register">
                <input id="bt_get_started" class="center-block" type="submit" value="Get Started">
            </form>
        </div>
    </div>
</div>

<div class="content_summary_1 row row-centered" style="margin-right: 0px;">
    <div class="col-md-4 col-sm-4 col-xs-12 col-centered">
        <div class="item">
            <div class="content center">
                <div id="gauge_users" class="gauge-meter-home-1"
                     data-percent="33"
                     data-theme="White"
                     data-size="150"
                     data-text="@(Model.UsersCount)"
                     data-label_color="White"
                     data-label="Utilisateurs">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12 col-centered">
        <div class="item">
            <div class="content center">
                <div id="gauge_formats" class="gauge-meter-home-1"
                     data-percent="66"
                     data-theme="White"
                     data-size="150"
                     data-text="@(Model.UsersCount)"
                     data-label_color="White"
                     data-label="Formats">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12 col-centered">
        <div class="item">
            <div class="content center">
                <div id="gauge_conversions" class="gauge-meter-home-1"
                     data-text="@(Model.TaskCount)"
                     data-theme="White"
                     data-label_color="White"
                     data-size="150"
                     data-percent="100"
                     data-label="Conversions">
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#gauge_users").gaugeMeter();
    $("#gauge_formats").gaugeMeter();
    $("#gauge_conversions").gaugeMeter();
</script>